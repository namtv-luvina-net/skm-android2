<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/zoneDlgApplyMsg"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/round_corner_white">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="10dp"
        android:layout_above="@+id/zoneDlgMsgFooter"
        >
        <TextView
            android:id="@+id/txtDlgApplyTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/text_color_inactive"
            android:text="@string/error"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/txtDlgApplyMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/text_color_inactive"
            android:text="This is message"
            android:layout_gravity="center"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/zoneDlgMsgFooter"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#bbc3d1"/>
        <LinearLayout
            android:id="@+id/btnLayout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_alignParentBottom="true">
            <TextView
                android:id="@+id/btnDlgApplyCancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:textSize="20dp"
                android:textColor="@color/text_color_active"
                android:text="Cancel"
                android:gravity="center"/>
            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#bbc3d1"/>
            <TextView
                android:id="@+id/btnDlgApplyOK"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:layout_marginLeft="-1dp"
                android:background="@android:color/transparent"
                android:textSize="20dp"
                android:textColor="@color/text_color_active"
                android:text="OK"
                android:textStyle="bold"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>