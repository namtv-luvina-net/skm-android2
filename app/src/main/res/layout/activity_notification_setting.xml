<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/product_info_bg_color"
    android:weightSum="1">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textViewBack"
            android:layout_width="110dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/ic_back2"
            android:gravity="center_vertical"
            android:text="@string/label_settings"
            android:onClick="btnBackClick"
            android:clickable="true"
            android:textSize="@dimen/text_size_value"
            android:textColor="@color/add_cert"
            />

        <jp.co.soliton.keymanager.customview.AutoResizeTextView
            android:id="@+id/tvTitleHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:gravity="center"
            android:textSize="@dimen/text_size_value"
            android:textColor="@color/color_black"
            android:text="@string/notif_setting"/>
        <TextView
            android:id="@+id/tvDetailNotifSave"
            android:layout_width="110dp"
            android:layout_height="25dp"
            android:gravity="center|right"
            android:paddingRight="20dp"
            android:text="@string/label_save"
            android:onClick="btnSaveNotifClick"
            android:clickable="true"
            android:textSize="@dimen/text_size_value"
            android:textColor="@color/add_cert"
            android:background="@android:color/transparent"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_cert"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="50dp"
        android:paddingLeft="20dp"
        android:textSize="18sp"
        android:textAllCaps="true"
        android:text="@string/label_expired_notification"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_cert"/>
    <Switch
        android:id="@+id/swNotifFlag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="20dp"
        android:text="@string/label_notification"
        android:background="@color/background_color_white"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_cert"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="50dp"
        android:paddingLeft="20dp"
        android:textSize="18sp"
        android:textAllCaps="true"
        android:text="@string/label_before_expired_notification"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_cert"/>
    <Switch
        android:id="@+id/swNotifBeforeFlag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="20dp"
        android:text="@string/label_notification"
        android:background="@color/background_color_white"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:background="@color/line_cert"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/background_color_white">
        <TextView
            android:id="@+id/btnSettingProductInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/background_color_white"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:textSize="20sp"
            android:textColor="@color/color_black"
            android:gravity="left|center_vertical"
            android:text="@string/label_expired"/>
        <EditText
            android:id="@+id/tvNotifBefore"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tvDayBefore"
            android:layout_centerVertical="true"
            android:background="@color/background_color_white"
            android:maxLines="1"
            android:maxLength="3"
            android:singleLine="true"
            android:inputType="number"
            android:digits="0123456789"
            android:textSize="20sp"
            android:textColor="@color/color_black"
            android:gravity="right"
            android:paddingRight="5dp"
            android:text="100"/>
        <TextView
            android:id="@+id/tvDayBefore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/btnDayBeforeMinus"
            android:layout_centerVertical="true"
            android:paddingRight="5dp"
            android:textSize="20sp"
            android:textColor="@color/color_black"
            android:text="@string/label_day_before"/>
        <Button
            android:id="@+id/btnDayBeforeMinus"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_toLeftOf="@+id/btnDayBeforePlus"
            android:gravity="center"
            android:background="@drawable/back_ground_minus_button"
            android:layout_centerVertical="true"
            android:layout_marginRight="-1dp"
            android:textColor="@color/text_color_active"
            android:textSize="20sp"
            android:text="-"/>
        <Button
            android:id="@+id/btnDayBeforePlus"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/back_ground_plus_button"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:textColor="@color/text_color_active"
            android:textSize="20sp"
            android:text="+"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_cert"/>
</LinearLayout>