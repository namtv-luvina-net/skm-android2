<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:orientation="vertical"
	android:paddingLeft="27dp">

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:layout_marginTop="30dp"
			android:layout_marginBottom="20dp"
			android:orientation="horizontal">

		<ImageView
			android:id="@+id/thumbnail"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="90"
			android:layout_gravity="center"
			android:paddingLeft="15dp"
			android:paddingRight="20dp"
			android:scaleType="fitCenter"
			android:src="@drawable/ic_approval_confirmation"/>

		<RelativeLayout
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:gravity="center_vertical"
				android:orientation="vertical"
				android:layout_weight="520"
				>
				<TextView
						android:id="@+id/titleHost"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/title_host_name"
						android:textColor="@color/text_color"
						android:textSize="14dp"/>
				<TextView
						android:id="@+id/tvHostValue"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_below="@id/titleHost"
						android:textSize="14dp"
						android:ellipsize="end"
						android:singleLine="true"
						android:textColor="@color/text_color"
						android:text="10.0.1.68" />
				<TextView
						android:id="@+id/titleID"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_above="@id/tvIdValue"
						android:textSize="14dp"
						android:textColor="@color/text_color"
						android:text="@string/title_user_id" />
				<TextView
						android:id="@+id/tvIdValue"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:textSize="14dp"
						android:ellipsize="end"
						android:singleLine="true"
						android:layout_alignParentBottom="true"
						android:textColor="@color/text_color"
						android:text="anhvt" />

				<TextView
						android:id="@+id/tvUpdateDate"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentRight="true"
						android:text="Date: 20/01/2017"
						android:textColor="@color/text_color"
						android:textSize="14dp"/>
				<TextView
						android:id="@+id/tvStatus"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentRight="true"
						android:layout_centerVertical="true"
						android:text="@string/stt_waiting_approval"
						android:textColor="@color/text_color_active"
						android:textSize="14dp"/>

		</RelativeLayout>

		<ImageView
			android:layout_height="18dp"
			android:layout_width="10dp"
			android:layout_gravity="center"
			android:layout_weight="57"
			android:src="@drawable/ic_arrow"
			/>
	</LinearLayout>
	<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="2dp"
			android:background="#c9caca"/>
</LinearLayout>