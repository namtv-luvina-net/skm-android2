<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rootViewInputPort"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/margin_content_input_tablet"
                android:paddingRight="@dimen/margin_content_input_tablet"
                android:orientation="horizontal"
                android:focusable="true"
                android:focusableInTouchMode="true">
		<include layout="@layout/fragment_title_input" />
		<LinearLayout
				android:id="@+id/rl_port"
				android:layout_width="match_parent"
				android:layout_height="33dp"
				android:layout_marginTop="200dp"
				android:orientation="horizontal"
				android:focusable="true"
				android:focusableInTouchMode="true" >
			<TextView
					android:id="@+id/txt_port"
					android:layout_width="wrap_content"
					android:textSize="@dimen/tv_content_left_side"
					android:text="@string/title_http_port_number"
					android:textColor="@color/text_color"
					android:maxLines="1"
					android:singleLine="true"
					android:layout_centerVertical="true"
					android:gravity="right"
					android:textAllCaps="true"
					android:paddingRight="@dimen/margin_item_menu"
					android:layout_height="wrap_content"/>
			<EditText
					android:id="@+id/edit_port"
					android:layout_width="match_parent"
					android:maxLines="1"
					android:singleLine="true"
					android:paddingLeft="@dimen/margin_item_menu"
					android:paddingRight="@dimen/margin_item_menu"
					android:maxLength="256"
					android:inputType="text|textVisiblePassword|textNoSuggestions"
					android:background="@drawable/round_corner_white_edittext"
					android:textColor="@color/text_color"
					android:text="80"
					android:hint="80"
					android:textSize="@dimen/tv_title_left_side"
					android:layout_height="match_parent"/>
		</LinearLayout>
		<TextView
				android:id="@+id/txt_des_download_ca"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/download_ca_description42"
				android:layout_marginTop="35dp"
				android:textSize="18sp"
				android:layout_below="@+id/rl_port"/>
</RelativeLayout>