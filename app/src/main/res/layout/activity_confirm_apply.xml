<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnConfirmApply"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnConfirmBack"
                android:background="@android:color/transparent"
                android:textColor="@color/text_color_active"
                android:textAllCaps="false"
                android:textSize="@dimen/text_size_title"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="left|center"
                android:text="@string/back"/>

            <jp.co.soliton.keymanager.customview.AutoResizeTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/text_size_title_large"
                android:maxLines="1"
                android:layout_marginTop="10dp"
                android:textColor="@color/text_color_inactive"
                android:text="@string/confirm_content"/>
            <View
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@android:color/transparent"/>
        </LinearLayout>
        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_corner_white"
                    android:gravity="center"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp">
                    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">
                        <TextView
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="@dimen/text_size_title"
                            android:text="·"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/background_color_white"
                            android:text="@string/host_name"
                            android:gravity="left|center"
                            android:textSize="@dimen/text_size_title"
                            android:textColor="@color/text_color_inactive"
                        />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="@dimen/text_size_value"
                            android:text=""/>
                        <TextView
                            android:id="@+id/txtConfirmHostname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/background_color_white"
                            android:text="Dummy data"
                            android:gravity="left|center"
                            android:textSize="@dimen/text_size_value"
                            android:textColor="@color/text_color_inactive"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="@dimen/text_size_title"
                            android:text="·"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/background_color_white"
                            android:text="@string/port_number"
                            android:gravity="left|center"
                            android:textSize="@dimen/text_size_title"
                            android:textColor="@color/text_color_inactive"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="@dimen/text_size_value"
                            android:text=""/>
                        <TextView
                            android:id="@+id/txtConfirmPortnumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/background_color_white"
                            android:text="Dummy data"
                            android:gravity="left|center"
                            android:textSize="@dimen/text_size_value"
                            android:textColor="@color/text_color_inactive"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="#bbc3d1"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="@dimen/text_size_title"
                            android:text="·"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/background_color_white"
                            android:text="@string/certlogin_userid_title"
                            android:gravity="left|center"
                            android:textSize="@dimen/text_size_title"
                            android:textColor="@color/text_color_inactive"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="@dimen/text_size_value"
                            android:text=""/>
                        <TextView
                            android:id="@+id/txtConfirmUserId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/background_color_white"
                            android:text="Dummy data"
                            android:gravity="left|center"
                            android:textSize="@dimen/text_size_value"
                            android:textColor="@color/text_color_inactive"
                            />
                    </LinearLayout>
                    <View
                        android:id="@+id/hrStore"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="#bbc3d1"/>
                    <LinearLayout
                        android:id="@+id/titleStore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="@dimen/text_size_title"
                            android:text="·"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/background_color_white"
                            android:text="@string/store"
                            android:gravity="left|center"
                            android:textSize="@dimen/text_size_title"
                            android:textColor="@color/text_color_inactive"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/valueStore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="@dimen/text_size_value"
                            android:text=""/>
                        <TextView
                            android:id="@+id/txtConfirmTargetPlace"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/background_color_white"
                            android:text="Dummy data"
                            android:gravity="left|center"
                            android:textSize="@dimen/text_size_value"
                            android:textColor="@color/text_color_inactive"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_corner_white"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="@dimen/text_size_title"
                            android:text="·"/>
                        <jp.co.soliton.keymanager.customview.AutoResizeTextView
                            android:id="@+id/titleEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/background_color_white"
                            android:text="@string/notification_destination_email_address"
                            android:gravity="left|center"
                            android:textSize="@dimen/text_size_title"
                            android:maxLines="1"
                            android:textColor="@color/text_color_inactive"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="@dimen/text_size_value"
                            android:text=""/>
                        <TextView
                            android:id="@+id/txtConfirmEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/background_color_white"
                            android:text="Dummy data"
                            android:gravity="left|center"
                            android:textSize="@dimen/text_size_value"
                            android:textColor="@color/text_color_inactive"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="#bbc3d1"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="@dimen/text_size_title"
                            android:text="·"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/background_color_white"
                            android:text="@string/reason_for_apply"
                            android:gravity="left|center"
                            android:textSize="@dimen/text_size_title"
                            android:textColor="@color/text_color_inactive"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="@dimen/text_size_value"
                            android:text=""/>
                        <TextView
                            android:id="@+id/txtConfirmReason"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/background_color_white"
                            android:text="Dummy data"
                            android:gravity="left|center"
                            android:textSize="@dimen/text_size_value"
                            android:textColor="@color/text_color_inactive"
                            />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <Button
        android:id="@+id/btnConfirmApply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="@string/apply"
        android:textSize="@dimen/text_size_title"
        android:textColor="@color/text_color_active"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:background="@drawable/round_corner_white"/>
</RelativeLayout>