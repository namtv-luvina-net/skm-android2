<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/background_color_white"
              android:paddingBottom="10dp"
              android:orientation="horizontal">

	<TextView
			android:id="@+id/textViewBack"
			android:layout_width="wrap_content"
			android:layout_height="35dp"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:drawableLeft="@drawable/ic_back2"
			android:gravity="center_vertical"
			android:text="@string/back"
			android:clickable="true"
			android:textSize="@dimen/text_size_value"
			android:textColor="@color/add_cert"/>

	<jp.co.soliton.keymanager.customview.AutoResizeTextView
			android:id="@+id/tvTitleHeader"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:maxLines="1"
			android:gravity="center"
			android:textSize="@dimen/text_size_value"
			android:textColor="@color/text_color"/>

	<android.support.v4.widget.Space
			android:layout_width="80dp"
			android:layout_height="1dp"
			android:background="@android:color/transparent"/>
</LinearLayout>