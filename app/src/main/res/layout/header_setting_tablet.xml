<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@color/background_color_white" >

	<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingBottom="10dp"
			android:layout_centerVertical="true">

		<TextView
				android:id="@+id/textViewBack"
				android:layout_width="wrap_content"
				android:layout_height="35dp"
				android:layout_marginLeft="10dp"
				android:layout_alignParentLeft="true"
				android:layout_centerVertical="true"
				android:drawableLeft="@drawable/ic_back2"
				android:gravity="center_vertical"
				android:text="@string/back"
				android:clickable="true"
				android:textSize="@dimen/text_size_value"
				android:textColor="@color/add_cert"/>

		<TextView
				android:id="@+id/tvTitleHeader"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:maxLines="1"
				android:singleLine="true"
				android:gravity="center"
				android:layout_centerInParent="true"
				android:textSize="@dimen/text_size_value"
				android:text="Title"
				android:textColor="@color/text_color"/>

		<Button
				android:id="@+id/more_option"
				android:layout_width="25dp"
				android:layout_height="25dp"
				android:layout_gravity="center"
				android:layout_centerInParent="true"
				android:layout_alignParentRight="true"
				android:gravity="end"
				android:layout_marginRight="20dp"
				android:layout_marginLeft="10dp"
				android:visibility="invisible"
				android:background="@drawable/ic_menu_48"/>
	</RelativeLayout>

	<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="10dp"/>
</LinearLayout>