<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

	<ListView
			android:id="@+id/listCertificate"
			android:layout_above="@+id/tvNewApply"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:divider="@android:color/transparent"
			android:dividerHeight="0dp"
			android:scrollbars="none" />

	<TextView
			android:id="@+id/tvNewApply"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/btn_add"
			android:layout_alignParentBottom="true"
			android:layout_centerHorizontal="true"
			android:textSize="@dimen/tv_title_left_side"
			android:textColor="@color/text_color_active"
			android:layout_marginBottom="@dimen/width_img_left_side_input_tablet"
			android:layout_marginTop="@dimen/width_img_left_side_input_tablet"/>
</RelativeLayout>