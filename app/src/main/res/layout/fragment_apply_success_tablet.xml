<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="horizontal">
		<RelativeLayout
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="match_parent"
				android:background="@drawable/left_panel_background"/>
		<LinearLayout
				android:layout_width="0dp"
				android:layout_weight="2.1"
				android:layout_height="match_parent"
				android:orientation="vertical"
				android:paddingLeft="@dimen/margin_content_input_tablet"
				android:paddingRight="@dimen/margin_content_input_tablet">
			<TextView
					android:id="@+id/title_success"
					android:text="Title Thong Bao Thanh Cong"
					android:layout_gravity="center_horizontal"
					android:textSize="@dimen/text_size_title"
					android:textColor="@color/color_title_input"
					android:layout_marginTop="160dp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>
			<ImageView
					android:layout_width="100dp"
					android:layout_height="70dp"
					android:background="@drawable/completed_apply_image"
					android:layout_gravity="center_horizontal"
					android:layout_marginTop="70dp"/>
			<TextView
					android:id="@+id/content_success"
					android:text="Content Thong Bao Thanh Cong"
					android:layout_gravity="center_horizontal"
					android:textColor="@color/text_color_active"
					android:textSize="@dimen/text_size_title"
					android:layout_marginTop="160dp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>