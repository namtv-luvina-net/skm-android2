<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal" >
	<TextView
			android:id="@+id/textViewBack"
			android:layout_width="wrap_content"
			android:layout_height="35dp"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:drawableLeft="@drawable/ic_back2"
			android:gravity="center_vertical"
			android:text="@string/label_setting"
			android:onClick="btnBackClick"
			android:clickable="true"
			android:textSize="@dimen/text_size_value"
			android:textColor="@color/add_cert"
			/>
	<TextView
			android:id="@+id/tvTitleHeader"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:maxLines="1"
			android:singleLine="true"
			android:layout_centerInParent="true"
			android:gravity="center"
			android:textSize="@dimen/text_size_value"
			android:textColor="@color/color_black"/>

	<Button
			android:id="@+id/btnMenuDetailSetting"
			android:layout_width="25dp"
			android:layout_height="25dp"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_marginRight="20dp"
			android:layout_marginLeft="10dp"
			android:background="@drawable/ic_menu_48"
			android:visibility="invisible"/>
</RelativeLayout>