<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
	<TextView
			android:id="@+id/lineTopHeader"
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="@color/line_cert"/>
	<TextView
			android:id="@+id/header_item"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/lineTopHeader"
			android:paddingBottom="10dp"
			android:paddingTop="25dp"
			android:paddingLeft="20dp"
			android:textSize="17sp"
			android:background="@color/background_color_gray"
			android:textAllCaps="true"
			android:textColor="@color/text_cert_content_detail"
			android:text="header" />
	<TextView
			android:layout_below="@id/header_item"
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="@color/line_cert"/>
</RelativeLayout>