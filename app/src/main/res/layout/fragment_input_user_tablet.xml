<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent" >
	<include layout="@layout/fragment_title_input" />
	<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:paddingLeft="@dimen/margin_content_input_tablet">
		<LinearLayout
				android:id="@+id/rl_host"
				android:layout_width="match_parent"
				android:layout_height="@dimen/height_item_input_host_tablet"
				android:layout_marginTop="@dimen/margin_top_content_input_host_tablet"
				android:paddingRight="@dimen/margin_right_user_input_tablet"
				android:focusable="true"
				android:focusableInTouchMode="true" >
			<TextView
					android:id="@+id/txt_title_user_id"
					android:layout_width="0dp"
					android:layout_weight="17"
					android:textSize="@dimen/text_size_input_tablet"
					android:text="@string/title_user_id"
					android:textColor="@color/text_color"
					android:maxLines="1"
					android:singleLine="true"
					android:gravity="right"
					android:textAllCaps="true"
					android:paddingRight="@dimen/margin_item_menu"
					android:layout_height="wrap_content"/>
			<EditText
					android:id="@+id/txtUserId"
					android:layout_width="0dp"
					android:layout_weight="35"
					android:maxLines="1"
					android:textColor="@color/text_color"
					android:singleLine="true"
					android:paddingLeft="@dimen/margin_item_menu"
					android:paddingRight="@dimen/margin_item_menu"
					android:maxLength="64"
					android:inputType="text|textVisiblePassword|textNoSuggestions"
					android:background="@drawable/round_corner_white_edittext"
					android:textSize="@dimen/text_size_input_tablet"
					android:layout_height="match_parent"/>
		</LinearLayout>
		<LinearLayout
				android:id="@+id/rl_secure_port"
				android:layout_below="@+id/rl_host"
				android:layout_width="match_parent"
				android:layout_height="@dimen/height_item_input_host_tablet"
				android:layout_marginTop="@dimen/margin_items_input_host_tablet"
				android:paddingRight="@dimen/margin_right_user_input_tablet"
				android:focusable="true"
				android:focusableInTouchMode="true" >
			<TextView
					android:id="@+id/txt_port"
					android:layout_width="0dp"
					android:layout_weight="17"
					android:textSize="@dimen/text_size_input_tablet"
					android:text="@string/title_password"
					android:textColor="@color/text_color"
					android:maxLines="1"
					android:singleLine="true"
					android:gravity="right"
					android:textAllCaps="true"
					android:paddingRight="@dimen/margin_item_menu"
					android:layout_height="wrap_content"/>
			<EditText
					android:id="@+id/txtPassword"
					android:layout_width="0dp"
					android:layout_weight="35"
					android:maxLines="1"
					android:maxLength="256"
					android:singleLine="true"
					android:paddingLeft="@dimen/text_size_content_item_apid"
					android:paddingRight="@dimen/margin_right_user_input_tablet"
					android:inputType="textPassword"
					android:background="@drawable/round_corner_white_edittext"
					android:textColor="@color/text_color"
					android:textSize="@dimen/text_size_input_tablet"
					android:layout_height="match_parent"/>
		</LinearLayout>
	</RelativeLayout>
</RelativeLayout>