<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_left_detail_confirm_apply_tablet"
                android:layout_marginRight="@dimen/margin_left_detail_confirm_apply_tablet"
                android:orientation="vertical">

	<TextView
			android:id="@+id/tvConfirmApply"
			android:layout_width="@dimen/width_button_confirm_approval_status"
			android:layout_height="wrap_content"
			android:minHeight="@dimen/height_btn_confirm_apply_tablet"
			android:text="@string/confirm_apply_status"
			android:gravity="center"
			android:layout_centerInParent="true"
			android:background="@drawable/background_btn_ctrl_apid"
			android:clickable="true"
			android:textSize="@dimen/tv_title_left_side"
			android:textColor="@drawable/text_selector"/>

	<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_above="@id/tvConfirmApply"
			android:layout_centerInParent="true"
			android:gravity="center">

		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">

			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">

				<TextView
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:textSize="@dimen/text_size_btn_content_tablet"
						android:gravity="right"
						android:layout_gravity="center"
						android:text="@string/host_name"
						android:textColor="@color/text_color"/>

				<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="@dimen/text_size_btn_content_tablet"
						android:text=":"
						android:layout_gravity="center"
						android:paddingLeft="@dimen/margin_item_menu"
						android:paddingRight="@dimen/margin_item_menu"
						android:textColor="@color/text_color"/>

				<TextView
						android:id="@+id/tvHostName"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:layout_gravity="center"
						android:textSize="@dimen/text_size_btn_content_tablet"
						android:text="10.0.1.68"
						android:textColor="@color/text_color"/>
			</LinearLayout>

			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="5dp"
					android:orientation="horizontal">

				<TextView
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:textSize="@dimen/text_size_btn_content_tablet"
						android:gravity="right"
						android:layout_gravity="center"
						android:text="@string/certlogin_userid_title"
						android:textColor="@color/text_color"/>

				<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="@dimen/text_size_btn_content_tablet"
						android:text=":"
						android:layout_gravity="center"
						android:paddingLeft="@dimen/margin_item_menu"
						android:paddingRight="@dimen/margin_item_menu"
						android:textColor="@color/text_color"/>

				<TextView
						android:id="@+id/titleUserId"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:ellipsize="end"
						android:layout_gravity="center"
						android:textSize="@dimen/text_size_btn_content_tablet"
						android:text="anhvt"
						android:textColor="@color/text_color"/>
			</LinearLayout>

			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginTop="5dp"
					android:orientation="horizontal">

				<TextView
						android:id="@+id/title_storage"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:textSize="@dimen/text_size_btn_content_tablet"
						android:gravity="center_vertical|right"
						android:layout_gravity="center"
						android:text="@string/place"
						android:textColor="@color/text_color"/>

				<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="@dimen/text_size_btn_content_tablet"
						android:gravity="center_vertical"
						android:text=":"
						android:layout_gravity="center"
						android:paddingLeft="@dimen/margin_item_menu"
						android:paddingRight="@dimen/margin_item_menu"
						android:textColor="@color/text_color"/>

				<TextView
						android:id="@+id/content_storage"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:ellipsize="end"
						android:textSize="@dimen/text_size_btn_content_tablet"
						android:gravity="center_vertical"
						android:layout_gravity="center"
						android:text="VPN or WIFI"
						android:textColor="@color/text_color"/>
			</LinearLayout>

			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginTop="5dp"
					android:orientation="horizontal">

				<TextView
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:textSize="@dimen/text_size_btn_content_tablet"
						android:gravity="center_vertical|right"
						android:layout_gravity="center"
						android:text="@string/apply_date"
						android:textColor="@color/text_color"/>

				<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="@dimen/text_size_btn_content_tablet"
						android:gravity="center_vertical"
						android:text=":"
						android:layout_gravity="center"
						android:paddingLeft="@dimen/margin_item_menu"
						android:paddingRight="@dimen/margin_item_menu"
						android:textColor="@color/text_color"/>

				<TextView
						android:id="@+id/tvDate"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:textSize="@dimen/text_size_btn_content_tablet"
						android:gravity="center_vertical"
						android:layout_gravity="center"
						android:text="2017/01/20"
						android:textColor="@color/text_color"/>
			</LinearLayout>

			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginTop="5dp"
					android:orientation="horizontal">

				<TextView
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:textSize="@dimen/text_size_btn_content_tablet"
						android:layout_gravity="center"
						android:gravity="center_vertical|right"
						android:text="@string/status"
						android:textColor="@color/text_color"/>

				<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="@dimen/text_size_btn_content_tablet"
						android:gravity="center_vertical"
						android:layout_gravity="center"
						android:text=":"
						android:paddingLeft="@dimen/margin_item_menu"
						android:paddingRight="@dimen/margin_item_menu"
						android:textColor="@color/text_color"/>

				<TextView
						android:id="@+id/tvStatus"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:layout_gravity="center"
						android:textSize="@dimen/text_size_btn_content_tablet"
						android:gravity="center_vertical"
						android:text="@string/stt_waiting_approval"
						android:textColor="@color/text_color"/>
			</LinearLayout>
		</LinearLayout>
	</RelativeLayout>

	<TextView
			android:id="@+id/tvDeleteApply"
			android:layout_width="@dimen/width_button_confirm_approval_status"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:layout_centerInParent="true"
			android:text="@string/withdrawal_apply"
			android:clickable="true"
			android:textSize="@dimen/tv_title_left_side"
			android:textColor="@color/text_delete_apply"
			android:layout_alignParentBottom="true"
			android:layout_marginBottom="@dimen/margin_bottom_title_complete_using_procedures_tablet"/>
</RelativeLayout>
