<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:gravity="center|top">

    <TextView android:text="EPS-ap Menu" android:id="@+id/MenuEnroll" 
	android:layout_width="wrap_content" android:layout_height="wrap_content" 
	android:layout_gravity="center|top" android:textSize="20sp">
	</TextView>
	
	<Button android:text="Start enrollment" android:id="@+id/ButtonEnrollment" 
	android:layout_width="wrap_content" android:layout_height="wrap_content">
	</Button>
	
	<Button android:text="Logout" android:id="@+id/ButtonLogout" 
	android:layout_width="wrap_content" android:layout_height="wrap_content">
	</Button>
	
	<TextView android:text="" 
	android:id="@+id/ErrorEnrollMessage" android:layout_width="wrap_content" 
	android:layout_gravity="center|top" android:layout_height="wrap_content">
	</TextView>
	
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:orientation="horizontal" >

	  <Button android:text="Start Passcode Controll" android:id="@+id/ButtonStartpasscode" 
		android:layout_width="wrap_content" android:layout_height="wrap_content">
		</Button>
		
		<Button android:text="End Passcode Controll" android:id="@+id/ButtonEndpasscode" 
		android:layout_width="wrap_content" android:layout_height="wrap_content">
		</Button>
	</LinearLayout>
		<TextView android:text="※当製品をアンインストールするときには、\nPasscode Controllを終了させてからアンインストールを行ってください。" 
		android:id="@+id/textView1" 
		android:layout_width="wrap_content" android:layout_height="wrap_content">
		</TextView>
		
</LinearLayout>