<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="horizontal">
		<RelativeLayout
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="match_parent"
				android:background="@drawable/left_panel_background"/>
		<RelativeLayout
				android:layout_width="0dp"
				android:layout_weight="2.1"
				android:layout_height="match_parent"
				android:paddingLeft="@dimen/margin_content_input_tablet"
				android:paddingRight="@dimen/margin_content_input_tablet">
			<include layout="@layout/fragment_title_input" />
			<include layout="@layout/fragment_footer_input" />
			<EditText
					android:id="@+id/txtReason"
					android:layout_width="match_parent"
					android:layout_height="360dp"
					android:background="@drawable/round_corner_white_edittext"
					android:inputType="text|textVisiblePassword|textNoSuggestions|textMultiLine"
					android:textSize="@dimen/text_size_value"
					android:textColor="@color/text_color"
					android:maxLength="1024"
					android:paddingLeft="10dp"
					android:layout_marginTop="120dp"
					android:gravity="top"
					android:scrollbars="vertical"
					/>
	</RelativeLayout>
	</LinearLayout>
</RelativeLayout>